<!--<p id="notice"><%= notice %></p>-->

<p>
  <strong>タイトル:</strong>
  <%= @article.content %>
</p>

<p>
  <%= attachment_image_tag @article, :image, :fill, 700, 500, format: 'jpeg' %>
</p>

<p>
  <strong>投稿者:</strong>
  <%= @article.user.name %>
</p>

<p>
  <strong>都道府県:</strong>
  <%= @article.category.name %>
</p>


<p>
  <strong>住所:</strong>
  <%= @article.address %>
</p>



<%= content_tag(:iframe, 'map', 
src:'https://www.google.com/maps/embed/v1/place?key=AIzaSyCq0ZRsxg1GeSHa82hmumdJPNC84v-R3Og&q=' + @article.address, 
width: '100%', height: 320, frameborder: 0) %>

<br>

<% if user_signed_in? && @article.user_id == current_user.id %>
  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %> |
  <%= link_to 'Delete', @article,
                    method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<% end %>

<%= link_to 'Back', articles_path, class: 'btn btn-default' %>
