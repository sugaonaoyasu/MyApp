<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @article.user.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @article.category.name %>             
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>Address:</strong>
  <%= @article.address %>
</p>

<p>
  <strong>Photo:</strong>
</p>
  <%= attachment_image_tag @article, :image, :fill, 700, 500, format: 'jpeg' %>


<%= content_tag(:iframe, 'map', 
src:'https://www.google.com/maps/embed/v1/place?key=AIzaSyCq0ZRsxg1GeSHa82hmumdJPNC84v-R3Og&q=' + @article.address, 
width: 800, height: 400, frameborder: 0) %>

<br>

<% if user_signed_in? && @article.user_id == current_user.id %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>
